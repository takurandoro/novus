<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Balance & Withdrawal History - Novus</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background: #f5f5f5;
      margin: 0;
      padding: 20px;
    }
    .common-header {
      background: #fff;
      padding: 15px 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-bottom: 2px solid #ccc;
      position: relative;
      margin-bottom: 20px;
    }
    .common-header .brand h1 {
      margin: 0;
      font-size: 2.5em;
      color: #FF6A00;
    }
    .common-header .brand p {
      margin: 0;
      font-size: 1.1em;
      color: #555;
    }
    .common-header .home-btn {
      position: absolute;
      right: 30px;
      top: 50%;
      transform: translateY(-50%);
      padding: 8px 16px;
      border-radius: 20px;
      background: linear-gradient(45deg, #FF6A00, #EE0979);
      color: #fff;
      text-decoration: none;
      font-weight: bold;
      transition: transform 0.2s ease;
    }
    .common-header .home-btn:hover {
      transform: translateY(-50%) scale(1.05);
    }
    .container {
      max-width: 800px;
      margin: auto;
      background: #fff;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.15);
    }
    h1.title {
      color: #FF6A00;
      text-align: center;
      margin-bottom: 20px;
    }
    .balance {
      font-size: 1.8em;
      text-align: center;
      margin-bottom: 20px;
    }
    .history {
      margin-top: 20px;
    }
    .transaction {
      border-bottom: 1px solid #ccc;
      padding: 10px 0;
    }
    .transaction:last-child {
      border-bottom: none;
    }
    .summary {
      text-align: center;
      margin-top: 20px;
      font-size: 1.2em;
      color: #333;
    }
    .back-btn {
      margin-top: 20px;
      padding: 10px 20px;
      background: linear-gradient(45deg, #FF6A00, #EE0979);
      color: #fff;
      border: none;
      border-radius: 8px;
      font-size: 1em;
      cursor: pointer;
      transition: transform 0.2s ease;
    }
    .back-btn:hover {
      transform: scale(1.05);
    }
  </style>
</head>
<body>
  <div class="common-header">
    <div class="brand">
      <h1>Novus</h1>
      <p>Empowering local entrepreneurs with finance solutions</p>
    </div>
    <a class="home-btn" href="/dashboard">Go to Home</a>
  </div>
  <div class="container">
    <h1 class="title">Balance & Withdrawal History</h1>
    <div class="balance">
      Current Balance: <strong><%= wallet %> RWF</strong>
    </div>
    <div class="history">
      <h2>Withdrawal History</h2>
      <% if (withdrawals.length === 0) { %>
        <p>No withdrawals yet.</p>
      <% } else { %>
        <% withdrawals.forEach(w => { %>
          <div class="transaction">
            <p><strong>Amount Withdrawn:</strong> <%= w.amount %> RWF</p>
            <p><strong>Fee:</strong> <%= w.fee %> RWF</p>
            <p><strong>Received:</strong> <%= w.finalAmount %> RWF</p>
            <p><strong>Date:</strong> <%= w.date.toLocaleString() %></p>
          </div>
        <% }); %>
      <% } %>
    </div>
    <div class="history">
      <h2>Sales Summary</h2>
      <% if (sales.length === 0) { %>
        <p>No sales yet.</p>
      <% } else { %>
        <p>Total Sales Transactions: <strong><%= sales.length %></strong></p>
      <% } %>
    </div>
    <div class="summary">
      <button class="back-btn" onclick="window.location.href='/dashboard'">Back to Dashboard</button>
    </div>
  </div>
</body>
</html>
