<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= businessName %> - <%= productName %></title>
  <script src="https://checkout.flutterwave.com/v3.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
  <style>
    body {
      background-color: <%= mainBrandColor %>;
      font-family: 'Roboto', sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .container {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 15px;
      padding: 40px;
      width: 90%;
      max-width: 500px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.15);
      text-align: center;
      margin-top: 20px;
    }
    h1.company-name {
      font-size: 2em;
      margin-bottom: 0.5em;
      background: linear-gradient(45deg, <%= mainBrandColor %>, #000);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    h2, p, .price, label, .footer {
      color: <%= mainBrandColor %>;
    }
    h2 {
      font-size: 1.5em;
      margin-bottom: 0.5em;
    }
    p {
      font-size: 1em;
      margin-bottom: 1em;
    }
    .price {
      font-size: 1.5em;
      margin: 15px 0;
    }
    input[type="text"],
    input[type="email"] {
      width: 100%;
      padding: 12px;
      margin: 10px 0;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 1em;
      color: <%= mainBrandColor %>;
    }
    .btn {
      background: linear-gradient(45deg, <%= mainBrandColor %>, #000);
      border: none;
      color: #fff;
      padding: 12px 20px;
      font-size: 1em;
      border-radius: 8px;
      cursor: pointer;
      transition: transform 0.2s ease;
      margin-top: 20px;
      width: 100%;
    }
    .btn:hover {
      transform: scale(1.05);
    }
    .footer {
      margin-top: 20px;
      font-size: 0.9em;
      color: <%= mainBrandColor %>;
    }
  </style>
</head>
<body>
  <!-- Landing page does not include a "Go to Home" button -->
  <div class="container">
    <h1 class="company-name"><%= businessName %></h1>
    <h2>You are about to buy: <%= productName %></h2>
    <p><%= description %></p>
    <div class="price">Price: <%= price %> RWF</div>
    
    <input type="text" id="customerName" placeholder="Your Name" required>
    <input type="email" id="customerEmail" placeholder="Your Email" required>
    <input type="text" id="customerPhone" placeholder="Your Phone Number" required>
    
    <button class="btn" onclick="makePayment()">Proceed to Checkout</button>
    
    <div class="footer">
      Link generated by Novus
    </div>
  </div>
  
  <script>
    function makePayment() {
      const customerName = document.getElementById("customerName").value.trim();
      const customerEmail = document.getElementById("customerEmail").value.trim();
      const customerPhone = document.getElementById("customerPhone").value.trim();
      
      if (!customerName || !customerEmail || !customerPhone) {
        alert("Please fill in all details before proceeding.");
        return;
      }
      
      FlutterwaveCheckout({
        public_key: "FLWPUBK_TEST-51b273b12cb327f13adad312719d8489-X",
        tx_ref: "TX_" + Date.now(),
        amount: parseFloat("<%= price %>"),
        currency: "RWF",
        payment_options: "card, mobilemoney, ussd",
        customer: {
          email: customerEmail,
          phonenumber: customerPhone,
          name: customerName
        },
        callback: function(response) {
          console.log("Flutterwave response:", response);
          fetch('/payment-complete', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              linkId: "<%= linkId %>",
              customerName: customerName,
              customerEmail: customerEmail,
              customerPhone: customerPhone,
              productName: "<%= productName %>",
              price: "<%= price %>",
              currency: "RWF"
            })
          })
          .then(res => res.json())
          .then(data => {
            if (data.success) {
              alert("Payment complete! Transaction ID: " + response.transaction_id);
            } else {
              alert("Payment recorded, but an error occurred: " + data.message);
            }
          })
          .catch(err => {
            console.error(err);
            alert("Error recording payment.");
          });
        },
        onclose: function() {
          console.log("Flutterwave modal closed");
        },
        customizations: {
          title: "<%= businessName %>",
          description: "<%= productName %>"
        }
      });
    }
  </script>
</body>
</html>
