<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Customers</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background: #f5f5f5;
      margin: 0;
      padding: 20px;
    }
    .container {
      max-width: 800px;
      margin: auto;
      background: #fff;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.15);
    }
    h1 {
      color: #FF6A00;
      text-align: center;
      margin-bottom: 20px;
    }
    .customer {
      border-bottom: 1px solid #ccc;
      padding: 10px 0;
    }
    .customer:last-child {
      border-bottom: none;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Your Customers</h1>
    <% customers.forEach(customer => { %>
      <div class="customer">
        <p><strong>Customer:</strong> <%= customer.customerName %> (<%= customer.customerEmail %>)</p>
        <p><strong>Phone:</strong> <%= customer.customerPhone %></p>
        <p><strong>Amount:</strong> <%= customer.amount %> <%= customer.currency %></p>
        <p><strong>Date:</strong> <%= customer.date.toLocaleString() %></p>
      </div>
    <% }) %>
  </div>
</body>
</html>
